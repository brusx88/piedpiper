extends ../main.layout.pug

block variables
  - var title = 'Блог'


block scripts
  script(src='about.bundle.js')

block content
  section.hero.hero-blog  
    -
      var socials = [
        ['vk', 'http://vk.com'],
        ['gh', 'http://gh.com'],
        ['in', 'http://in.com']
      ]
    ul.socials.hero__links
      each item in socials
        a(href="#").socials__link
          +icon(item, 'socials__link-icon socials__link-icon--' +item[0])
    .hero__menu
      a(href="#").hamburger
        .hamburger__link
    .hero__title
      .section__img 
        img(src="", alt="").section__img-pic
      .user
        .user__pic
          img(src="../../assets/images/hero/ava.jpg", alt="avatar").user__pic-img
        .user__title
          h2.blog__name Блог
          span.blog_discription Статьи, которые я написал
    
  section.blog
